extends ../layout

block content
  .row
    .large-12.columns
      h2 Reset Password
  .panel
    if failure
      .row
        .large-6.columns
          .error #{failure}
    .row
      .large-6.columns
        form.custom(name='user', action='/reset?key=#{resetKey}', method='post')
          .row
            .large-6.columns
              label New Password
                input(name='password', type='password', placeholder='password')
          .row
            .large-6.columns.end
              button.radius(type='submit') Reset Password

          
