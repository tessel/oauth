extends layout

block content
  .row
    .large-12.columns
      h2.subheader Login
  .panel
    form#authorise.custom(name='authorise', action='/login', method='post')
      .row
        .large-3.columns
          a#google(href="/auth/google" class="button expand secondary [radius round]")
            i.fa.fa-google
            | &nbsp; Login with Google
        .large-3.columns.end
          a#github(href="/auth/github", class="button expand secondary [radius round]") 
            i.fa.fa-github
            | &nbsp; Login with Github
      .row
        .large-6.columns.end(class="#{loginErr ? 'error' : ''}")
          label(for="username") Username or Email
          input.error(name='username', type='text', placeholder='username' id='username')
          if loginErr
            small.error #{loginErr}
      .row
        .large-6.columns.end(class="#{loginErr ? 'error' : ''}")
          label(for="password") Password
            input(name='password', type='password', placeholder='password' id='password')
          if loginErr
            small.error #{loginErr}
      .row
        .large-3.columns.end
          button.radius(type='submit') login
        .large-2.columns
          a#forgot-password.right(href="#") forgot password?
        .large-1.columns.end
          a.right(href='/signup') sign up

block scripts
  script(src='/javascripts/custom/recover.js')
