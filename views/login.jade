extends layout

block content
  .row
    .large-12.columns
      h2.subheader Login
  .panel
    form.custom(name='authorise', action='/login', method='post')
      .row
        .large-6.columns.end
          input(name='client_id', type='hidden', value=client_id)
          input(name='response_type', type='hidden', value=response_type)
          input(name='redirect_uri', type='hidden', value=redirect_uri)
          label Username
            input(name='username', type='text', placeholder='username')
      .row
        .large-6.columns.end
          label Password
            input(name='password', type='password', placeholder='password')
      .row
        .large-6.columns.end
          button.radius(type='submit') login
